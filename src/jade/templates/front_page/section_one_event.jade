//- Section One Event
section.section_one_event
   .wrapper
      .create_event_field
         .error_event
            .error_description
               i.fas.fa-plus-circle
               span.error_event_description Failed to create an event. Time slot is already booked.
            span.error_event_btn &#10006;       
         .event_body
            .added_field
               .event_name
                  label(for='name') Name of the event:
                  input#name(type='text')
               .event_members
                  label(for='participants') Participants
                  select#participants
                     option(value="Serhij") Serhij
                     option(value="Marij") Marij
                     option(value="Petro") Petro
                     option(value="Ann") Ann
                     option(value="Oleg") Oleg
                     option(value="Tamara") Tamara
               .event_day
                  label(for='day') Day
                  select#day
                     option(value="Mon") Monday
                     option(value="Tuesday") Tuesday
                     option(value="Wed") Wednesday
                     option(value="Thu") Thursday
                     option(value="Friday") Friday
               .event_time
                  label(for='time') Time
                  select#time
                     option(value="10") 10:00
                     option(value="11") 11:00
                     option(value="12") 12:00
                     option(value="13") 13:00
                     option(value="14") 14:00
                     option(value="15") 15:00
                     option(value="16") 16:00
                     option(value="17") 17:00
                     option(value="18") 18:00
            .create_btn_field
               p.event_btn_cancel Cancel
               p.event_btn_create Create

